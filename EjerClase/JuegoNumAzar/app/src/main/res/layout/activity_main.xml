<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="80dp"
        android:background="#C62828"
        android:text="Adivinar"
        android:textColor="#F9A825"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textJuegoDeAzar"
        android:layout_width="173dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:text="Juego de Azar"
        android:textColor="#FF5722"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIngNum"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#C62828"
        app:layout_constraintEnd_toStartOf="@+id/btnAdivinar"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="360dp"
        android:background="#F9A825"
        android:text="Ayuda"
        android:textColor="#C62828"
        app:layout_constraintEnd_toStartOf="@+id/btnAdivinar"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMeRindo"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="60dp"
        android:background="#F9A825"
        android:text="Me Rindo"
        android:textColor="#C62828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toEndOf="@+id/btnAdivinar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="256dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:text="Ingrese un numero del 1 al 100"
        android:textColor="#FF5722"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar" />

    <TextView
        android:id="@+id/txtVidas"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#C62828"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAyuda" />

    <TextView
        android:id="@+id/txtIntentos"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#C62828"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVidas" />

    <TextView
        android:id="@+id/txtAyuda"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#C62828"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVidas" />

    <TextView
        android:id="@+id/txtResFinal"
        android:layout_width="362dp"
        android:layout_height="81dp"
        android:layout_marginTop="112dp"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>