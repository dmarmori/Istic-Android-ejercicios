<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:padding="10dp"
    tools:context=".NumeroSecreto">

    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Adivinar"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <TextView
        android:id="@+id/textJuegoDeAzar"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/archivo_black"
        android:text="NUMERO SECRETO"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIngNum"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Ayuda"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResFinal" />

    <Button
        android:id="@+id/btnJuegoNuevo"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Jugar de nuevo"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnMeRindo"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/btnAyuda"
        app:layout_constraintTop_toBottomOf="@+id/txtResFinal" />

    <Button
        android:id="@+id/btnMeRindo"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Me Rindo"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResFinal" />

    <TextView
        android:id="@+id/lblComoJugar"
        android:layout_width="43dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:linksClickable="true"
        android:text="?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnGuardarDatosAdivina"
        app:layout_constraintStart_toEndOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar" />

    <TextView
        android:id="@+id/txtResFinal"
        android:layout_width="362dp"
        android:layout_height="81dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/archivo_black"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <ImageView
        android:id="@+id/btnGuardarDatosAdivina"
        android:layout_width="60dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:tint="@android:color/background_light"
        android:tintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="72dp"
        android:layout_height="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:tint="@android:color/background_light"
        android:tintMode="multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar"
        app:srcCompat="@android:drawable/ic_menu_revert" />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJuegoNuevo"
        app:layout_constraintVertical_bias="0.446">

        <TextView
            android:id="@+id/txtIntentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/archivo_black"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtVidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/compartirButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="@font/archivo_black"
            android:text="Compartir"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="26dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>