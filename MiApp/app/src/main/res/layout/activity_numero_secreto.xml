<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:padding="10dp"
    tools:context=".NumeroSecreto">

    <Button
        android:id="@+id/btnAdivinar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Adivinar"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <TextView
        android:id="@+id/textJuegoDeAzar"
        android:layout_width="287dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/archivo_black"
        android:text="NUMERO SECRETO"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIngNum"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Ayuda"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResFinal" />

    <Button
        android:id="@+id/btnMeRindo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Me Rindo"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResFinal" />

    <TextView
        android:id="@+id/lblComoJugar"
        android:layout_width="43dp"
        android:layout_height="79dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:linksClickable="true"
        android:text="?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar" />

    <TextView
        android:id="@+id/txtVidas"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/archivo_black"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAyuda" />

    <TextView
        android:id="@+id/txtIntentos"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/archivo_black"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVidas" />

    <TextView
        android:id="@+id/txtAyuda"
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/archivo_black"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIntentos" />

    <TextView
        android:id="@+id/txtResFinal"
        android:layout_width="362dp"
        android:layout_height="81dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/archivo_black"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblComoJugar" />

    <ImageView
        android:id="@+id/btnGuardarDatosContador"
        android:layout_width="60dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:clickable="false"
        android:contextClickable="false"
        android:longClickable="false"
        android:saveEnabled="true"
        android:tint="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJuegoDeAzar"
        app:srcCompat="@android:drawable/ic_menu_save" />

</androidx.constraintlayout.widget.ConstraintLayout>