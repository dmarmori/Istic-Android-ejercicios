<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:padding="10dp"
    tools:context=".Contador">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblContador">

        <Button
            android:id="@+id/btnRestar"
            android:layout_width="146dp"
            android:layout_height="124dp"
            android:background="@drawable/btn_reunded"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="sans-serif"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="80sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSumar"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_reunded"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="sans-serif"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="80sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReserContador"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_reunded"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="@font/archivo_black"
        android:text="Reiniciar"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnGuardarDatosContador"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/imgMenu"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/archivo_black"
        android:text="CONTADOR"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblContador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/archivo_black"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imgMenu"
        android:layout_width="83dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@android:color/background_light"
        android:foregroundTint="@android:color/background_light"
        android:tint="@android:color/background_light"
        android:tintMode="multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/lblayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:linksClickable="true"
        android:text="?"
        android:textColor="@android:color/background_light"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReserContador" />

    <ImageView
        android:id="@+id/btnGuardarDatosContador"
        android:layout_width="93dp"
        android:layout_height="91dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="4dp"
        android:tint="@android:color/background_light"
        android:tintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@android:drawable/ic_menu_save" />

</androidx.constraintlayout.widget.ConstraintLayout>
