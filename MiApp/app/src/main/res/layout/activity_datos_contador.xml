<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:padding="10dp"
    tools:context=".DatosContador">

    <TextView
        android:id="@+id/lblDatoCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtObservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDatoCont"
        tools:text="Observacvion" />

    <EditText
        android:id="@+id/txtMultilineCont"
        android:layout_width="381dp"
        android:layout_height="385dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarDatoCont"
        app:layout_constraintVertical_bias="0.979" />

    <Button
        android:id="@+id/btnGuardarDatoCont"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_red_dark"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/txtObservacion"
        tools:layout_editor_absoluteX="63dp" />

    <Button
        android:id="@+id/btnEliminarCont"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_red_dark"
        android:text="Eliminar"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/txtObservacion"
        tools:layout_editor_absoluteX="230dp" />
</androidx.constraintlayout.widget.ConstraintLayout>